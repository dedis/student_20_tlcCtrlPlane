{
    "defaultSeverity": "error",
    "no-unexpected-multiline": true,
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "variable-name": [
            true,
            "check-format",
            "allow-leading-underscore"
        ],
        "no-console": false,
        "member-access": [
            true,
            "no-public"
        ],
        "max-classes-per-file": false,
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-type",
            "check-typecast",
            "check-type-operator",
            "check-preblock",
            "check-rest-spread"
        ]
    },
    "rulesDirectory": []
}